doctype 5
html
	head
		title= title
		meta(http-equiv="X-UA-Compatible", content="IE=Edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel='stylesheet', href='/css/bootstrap.min.css', media="screen")
	body
		.navbar.navbar-inverse.navbar-static-top
			a.navbar-brand(href="#") Consensus
			ul.nav.navbar-nav
				li.active
					a(href="/") Home
				- if (locals.authed_user !== null)
					li
						a(href="/agendas/closed") History
					li
						a(href="/agendas/relevant") Your agendas
					li
						a(href="/settings") #{locals.authed_user.email}
			- if (locals.authed_user !== null)
				button.pull-right.btn.btn-default.navbar-btn#signout(type="button") Sign out
			- else
				button.pull-right.btn.btn-default.navbar-btn#signin(type="button") Sign in
		.container
			block content
		script(src="http://code.jquery.com/jquery.js")
		script(src='/js/bootstrap.min.js')
		script(src="https://login.persona.org/include.js")
		- if (locals.authed_user)
			script.
				var authed_user = '#{authed_user.email}';
		- else
			script.
				var authed_user = null;
		script(src="/js/persona.js")
